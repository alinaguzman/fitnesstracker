<p id="notice"><%= notice %></p>

<h1>Listing Activities</h1>

<table>
  <thead>
    <tr>
      <th>Sport</th>
      <th>Length</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.sport %></td>
        <td><%= activity.length %></td>
      </tr>
    <% end %>

  </tbody>


</table>
<tr>Total miles: <%= @miles %></tr>


<br>
<%= link_to "Track Your Fitness!",
            :controller => "activities",
            :action => "track" %>

<br>

<%= link_to 'New Activity', new_user_activity_path %>
